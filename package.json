{
  "name": "@slimio/micro",
  "version": "0.2.0",
  "description": "NodeJS C NAPI low level binding to get high resolution timestamp (in microseconds)",
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "prebuilds": "prebuildify --napi",
    "build": "cross-env node-gyp configure && node-gyp build",
    "test": "cross-env psp && ava --verbose",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "nyc npm test",
    "report": "nyc report --reporter=html"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 98,
    "statements": 98,
    "functions": 98,
    "branches": 90
  },
  "husky": {
    "hooks": {
      "pre-push": "cross-env eslint index.js && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlimIO/Micro.git"
  },
  "keywords": [
    "Micro",
    "Clock",
    "Nodrift",
    "Timestamp",
    "Nano"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "binding.gyp",
    "micro.cpp",
    "include"
  ],
  "author": "SlimIO",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/SlimIO/Micro/issues"
  },
  "homepage": "https://github.com/SlimIO/Micro#readme",
  "dependencies": {
    "node-addon-api": "^1.6.3",
    "node-gyp-build": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^4.0.0",
    "@slimio/is": "^1.5.0",
    "@slimio/psp": "^0.6.0",
    "ava": "^2.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "husky": "^3.0.2",
    "jsdoc": "^3.5.5",
    "node-gyp": "^5.0.0",
    "nyc": "^14.0.0",
    "pkg-ok": "^2.3.1"
  }
}
